<%- include('./header.ejs')%>

    <section class="login-wrap mtb-40">
    	<div class="container">
    		<div class="row justify-content-center">
    			<div class="col-md-6">
                    <div class="login-box">
                        <h1>Administrator Login</h1>
                        <% if(msg.length >0 ){ %>
                            <div class="alert-danger alert"><%= msg %></div>
                        <%}%>
                        <form action="vlogin" method="post" >
                            <div class="form-group">
                                <input type="email" name="email" class="form-control" placeholder="email">
                            </div>
                            <div class="form-group">
                                <input type="password" name="password" class="form-control" placeholder="Password">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary form-control">Log In</button>
                            </div>
                        </form>
                        <p>Don't have an account <span><a href="/register">register here</a></span></p> 
                    </div>         
                </div>
    		</div>
    	</div>
    </section>

