<%- include('./header.ejs')%>

    <section class="blog-detail mtb-40">
    	<div class="container">
    		<div class="row">
    			<div class="col-md-8">
    				<div class="blog-left">
                        <h1><%= d.title %></h1>
                        <div class="posted-on">
                            <p>by <span>RSGiTECH</span> on <span><%= d.createdAt.toLocaleDateString() %></span></p>
                        </div>
                        <div class="detail-img">
    					   <img src="<%= d.image.url %>" width="50%" alt="blog1" />
                           <p class="md-3"> <%= d.discripton %></p>
                        </div>
                       
    				</div>
    			</div>
    			<div class="col-md-4">
    				<div class="blog-right">
                        <div class="right-widget recent-post">
                            <h3>Recent Blogs</h3>
                          <% r.forEach((recentitem)=>{%>
                            <a href="#">
                                <div class="rb-box">
                                    <div class="rb-box-img">
                                        <img src="<%= recentitem.image.url %>" alt="blog1" />
                                    </div>
                                    <div class="rb-box-desc">
                                        <h4><%= recentitem.title %></h4>
                                        <p><%= recentitem.createdAt.toLocaleDateString() %></p>
                                    </div>
                                </div>
                            </a>
                         <% })%>
                           
                        </div>
                         <div class="right-widget categories">
                             <h3>Categories</h3>
                             <ul>
                                
                                <% c.forEach((Categoryitem)=>{%>
                                    <li><a href="#"><%= Categoryitem.cat_name %> </a></li>
                               <% })%>
                            </ul>
                         </div>
    				</div>
    			</div>
    		</div>
    	</div>
    </section>

    <%- include('./footer.ejs')%>
   